@{
    ViewData["Title"] = "Kategori Sil";
}
<div class="row p-1">
    <div class="col mb-1">
        <h3 class="display-4 border-bottom">Kullanıcı Hesabı</h3>
    </div>
</div>

<div class="row p-4">
    <div class="col">
        <p class="text-danger">
            İlgili Kategoriyi Silmek İstediğinize Emin Misiniz? </br>
            <small>Bu İşlem Geri Alınamaz!</small>
        </p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-4">
        <dl class="row">
            <dt class="col-4">Kategori Adı</dt>
            <dd class="col-8">Innova</dd>

            <dt class="col-4">Kategori Açıklama</dt>
            <dd class="col-8">Açıklama</dd>

            <dt class="col-4">Oluşturan</dt>
            <dd class="col-8">Umut Kürşat TUNCER</dd>

            <dt class="col-4">Oluşturma Tarihi</dt>
            <dd class="col-8">31.05.2023</dd>

            <dt class="col-4">Güncelleyen</dt>
            <dd class="col-8">Umut Kürşat TUNCER</dd>

            <dt class="col-4">Güncelleme Tarihi</dt>
            <dd class="col-8">31.05.2023</dd>
        </dl>
    </div>
</div>
<div class="row mb-4">
    <div class="col">
        <form method="post" asp-action="Delete">
            <button type="submit" class="btn btn-danger btn-sm mt-3"><i class="fa fa-trash"></i>Kategoriyi Sil</button>
            <a class="btn btn-secondary btn-sm mt-3" asp-action="Index"><i class="fa fa-arrow-left"></i>Listeye Dön</a>
        </form>
    </div>
</div>