@{
    ViewData["Title"] = "Home Page";
}

@section Carousel{

    <div id="carouselBlock" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselBlock" data-slide-to="0" class="active"></li>
            <li data-target="#carouselBlock" data-slide-to="1"></li>
            <li data-target="#carouselBlock" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://picsum.photos/1500/330?random=1" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://picsum.photos/1500/330?random=2" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://picsum.photos/1500/330?random=3" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-target="#carouselBlock" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-target="#carouselBlock" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </button>
    </div>
}

<div class="row my-4">
    <div class="col-10">
        <a asp-action="Index" asp-controller="Home" asp-route-id="1" class="badge badde-dark"> <i class="fa fa-th-list"></i>Dark</a>
        <a asp-action="Index" asp-controller="Home" asp-route-id="2" class="badge badge-dark"> <i class="fa fa-th-list"></i>Primary</a>
        <a asp-action="Index" asp-controller="Home" asp-route-id="3" class="badge badge-dark"> <i class="fa fa-th-list"></i>Primary</a>
        <a asp-action="Index" asp-controller="Home" asp-route-id="4" class="badge badge-dark"> <i class="fa fa-th-list"></i>Primary</a>
        <a asp-action="Index" asp-controller="Home" asp-route-id="5" class="badge badge-dark"> <i class="fa fa-th-list"></i>Primary</a>

    </div>
</div>

<div class="row row-cols-1 row-cols-md-4">

    @for (int i = 0; i < 12; i++)
    {
        <div class="col mb-4">
            <div class="card ">
                <img src="https://picsum.photos/390/130?random=@i" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><a href="#"> Card title</a></h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk</p>
                    <p class="card-text text-lg-end">
                        <div class="text-muted small">
                            <div class="text-lg-end"> <i class="fa fa-user  mr-2"></i>Umut Kürşat TUNCER</div>
                            <div class="text-lg-end"> <i class="fa fa-clock mr-2"></i>30.05.2023 11.00 </div>
                        </div>
                    </p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col">
                            <a class="btn btn-default btn-sm"><i class="far fa-star"></i>5</a>
                            <a data-toggle="modal" data-target="#modal_notecomments" class="btn btn-default btn-sm"><i class="far fa-comments"></i>15</a>
                        </div>
                        <div class="col text-lg-end">
                            <a data-toggle="modal" data-target="#modal_notedetail" class="btn btn-light btn-sm">Detay <i class="fa fa-info-circle"></i></a>
                        </div>
