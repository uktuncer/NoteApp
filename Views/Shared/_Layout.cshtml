<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Note App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous" asp-append-version="true">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NoteApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Note App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="manage" role="button"
                               data-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-wrench"></i> İşlemler
                            </a>
                            <div class="dropdown-menu" aria-labelledby="manage">
                                <a class="dropdown-item" asp-action="Create" asp-controller="Note">
                                    <i class="fa fa-plus"></i> Not Ekle
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Note">
                                    <i class="fa fa-th-list"></i> Notlarım
                                </a>
                                <a class="dropdown-item" asp-action="LikedList" asp-controller="Note">
                                    <i class="fa fa-star"></i> Beğendiklerim
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-action="Create" asp-controller="Category">
                                    <i class="fa fa-plus"></i> Kategori Ekle
                                </a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Category">
                                    <i class="fa fa-th-list"></i> Kategorileri Yönet
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-action="Create" asp-controller="User">
                                    <i class="fa fa-plus"></i> Kullanıcı Ekle
                                </a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="User">
                                    <i class="fa fa-th-list"></i> Kullanıcıları Yönet
                                </a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="categories" role="button"
                               data-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-th-list "></i>  Kategoriler
                            </a>
                            <div class="dropdown-menu" aria-labelledby="categories">
                                <a class="dropdown-item" asp-action="Index" asp-controller="Home">
                                    <i class="fa fa-th-list "></i> Tümü
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Home" asp-route-id="1">
                                    <i class="fa fa-th-list "></i> Category 1

                                </a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Home" asp-route-id="2">
                                    <i class="fa fa-th-list "></i> Category 1

                                </a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="MostLiked"><i class="fa fa-star "></i> En Beğenilenler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index"><i class="fa fa-th-list "></i> Son Yazılar</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Login"><i class="fa fa-sign-in-alt"></i> Giriş</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Register"><i class="fa fa-user"></i> Üye Ol</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="userinfo" role="button"
                               data-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-user"></i> Umut Kürşat
                            </a>
                            <div class="dropdown-menu" aria-labelledby="userinfo">
                                <a class="dropdown-item" asp-action="ProfileShow" asp-controller="Home">
                                    <i class="fa fa-user"></i> Profil
                                </a>
                                <a class="dropdown-item" asp-action="ProfileEdit" asp-controller="Home">
                                    <i class="fa fa-user-edit"></i> Düzenle
                                </a>
                                <a class="dropdown-item" asp-action="DeleteProfile" asp-controller="Home">
                                    <i class="fa fa-user-edit"></i> Sil
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-action="Logout" asp-controller="Home">
                                    <i class="fa fa-sign-out-alt"></i> Çıkış
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @await RenderSectionAsync("Carousel", required: false)

    <div class="container-fluid">
        <main role="main" class="pb-5 mb-4">
            @RenderBody()
        </main>
    </div>

        
    <footer class="border footer text-lg-center">
        <div class="container-fluid small">
            <div class="row">
                <div class="col-12">
                    <div>
                        <div>  Tüm Hakları Saklıdır. &copy; @DateTime.Now.Year - Note App - </div>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik</a> |
                    <a asp-area="" asp-controller="Home" asp-action="About">Hakkımızda</a> |
                    <a asp-area="" asp-controller="Home" asp-action="Index">Son Yazılar</a> |
                    <a asp-area="" asp-controller="Home" asp-action="Login">Giriş</a> |
                    <a asp-area="" asp-controller="Index" asp-action="Register">Kayıt</a>
                  </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
